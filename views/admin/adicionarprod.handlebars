<main class="mainFormulario">
    <div class="containerformAP">
        <h1>Cadastro de Produto</h1>
            <form class="formAP" action="/admin/adicionarprod/add" method="post" enctype="multipart/form-data">
            <div class="contentAP">
                <div class="input-boxAP">
                    <label for="nome-produto" class="labelAP">Nome do Produto:</label>
                    <input type="text" id="nome-produto" name="nome" required>
                </div>
                <div class="input-boxAP">
                    <label for="preco" class="labelAP">Preço:</label>
                    <input type="number" id="preco" name="preco"  required>
                </div>
                <div class="input-boxAP">
                    <label for="fornecedor" class="labelAP">Fornecedor:</label>
                        <select name="fornecedor" id="fornecedor" required>
                            {{#each fornecedores}}
                                <option value="{{nomeFantasia}}">{{nomeFantasia}}</option>
                            {{/each}}
                        </select>
                </div>
                <div class="input-boxAP">
                    <label for="quantidade" class="labelAP">Quantidade em Estoque:</label>
                    <input type="number" id="quantidade" name="quantidade" step="1"required>
                </div>
                <div class="input-boxAP">
                    <label for="imagem" class="labelAP">Imagem:</label>
                    <input type="file" name="imagem" accept="image/*">
                </div>
                <div class="input-boxAP">
                    <label for="categoria" class="labelAP">Categoria:</label>
                    <select name="categoria" class="selectAP">
                    <option value="aliança">Aliança</option>
                    <option value="pingente">Pingente</option>
                    <option value="pulseira">Pulseira</option>
                    <option value="brinco">Brinco</option>
                    <option value="piercing">Piercing</option>
                    </select>
                </div>
            </div>
            <div class="btns">
                <button type="button" onclick="voltarPagina()" class="btn-confirmAP">Voltar</button>
                <input type="submit" value="Confirmar" class="btn-confirmAP">
            </div>
        </form>
        </div>
    </div>
</main>





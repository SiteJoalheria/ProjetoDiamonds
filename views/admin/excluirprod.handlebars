<main class="mainFormulario">
    <div class="containerformAP">
        <h1>Excluir Produto</h1>
            <form class="formAP" action="/admin/excluirprod/{{produtos.id}}" method="post" enctype="multipart/form-data">
            <div class="contentAP">
                <div class="input-boxAP">
                    <label for="nome-produto" class="labelAP">Nome do Produto:</label>
                    <input type="text" id="nome-produto" name="nome" value="{{produtos.nome}}" readonly>
                </div>
                <div class="input-boxAP">
                    <label for="preco" class="labelAP">Pre√ßo:</label>
                    <input type="number" id="preco" name="preco" value="{{produtos.preco}}" readonly>
                </div>
                <div class="input-boxAP">
                    <label for="fornecedor" class="labelAP">Fornecedor:</label>
                    <select name="fornecedor" id="fornecedor" readonly>
                        <option value="{{produtos.nomeForne}}">{{produtos.nomeForne}}</option>
                    </select>
                </div>
                <div class="input-boxAP">
                    <label for="quantidade" class="labelAP">Quantidade em Estoque:</label>
                    <input type="number" id="quantidade" name="quantidade" step="1" value="{{produtos.quantidade}}" readonly>
                </div>
                <div class="input-boxAP">
                    <label for="imagem" class="labelAP">Imagem atual:</label>
                    <img src="{{ produtos.imagem }}" alt="Imagem atual do produto" class="img-formprod">
                </div>
                <div class="input-boxAP">
                    <label for="categoria" class="labelAP">Categoria:</label>
                    <select name="categoria" class="selectAP">
                        <option value="{{produtos.categoria}}">{{produtos.categoria}}</option>
                    </select>
                </div>
            </div>
            <div class="btns">
                <button type="button" onclick="voltarPagina()" class="btn-confirmAP">Voltar</button>
                <input type="submit" value="Excluir">
            </div>
        </form>
        </div>
    </div>
</main>




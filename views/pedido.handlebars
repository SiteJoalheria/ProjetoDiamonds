<main class="mainPedido">
    <div class="containerGrid">
        <div class="col1">
            <div class="containerEndereco">
            <div class="tituloEndereco">
                <h2>SELECIONE O ENDEREÇO</h2>
            </div>
            <div class="endereco">
                <p>Endereço:</p>
                <p>Rua jacinto pinto</p>
                <p>CEP: 18608-045</p>
                <p>Cidade: botucatu - SP</p>
            </div>
            <div class="btns-endereco-container ">
                    <button class="btns-endereco ">EDITAR</button>
                    <button class="btns-endereco c-blue">NOVO ENDEREÇO</button>
                </div>
            
        </div>
        <div class="containerProduto">
            <div class="tituloProduto">
                <h2>PRODUTOS</h2>
                <button class="btn-remover-tudo">REMOVER TODOS OS PRODUTOS</button>
            </div>
            <section class="listaprodutos">
                {{#each produtos}}
                    <div class="contentProd">
                        <div class="prod-img">
                            <img src="{{this.imagem}}" alt="Imagem do produto">
                        </div>
                        <div class="prod-nome">
                            <p>{{this.nome}}</p>
                        </div>
                        <div class="prod-qtn">
                            <p>Quant: </p>
                            <div class="btn-qtn">
                                <button class="none"><img src="/icons/menor.png" class="simbolos-btn"></button>
                                <input value="{{this.quantidade}}"></input>
                                <button class="none"><img src="/icons/maior.png" class="simbolos-btn"></button>
                            </div>
                            <button class="prod-qtn-remove "><i></i><span>REMOVER</span></button>
                        </div>
                        <div class="prod-preco">
                            <p class="pvista">preço a vista:</p>
                            <p class="price">{{this.preco}}</p>
                        </div>
                    </div>
                {{/each}}
            </section>
        </div>
        </div>
        <div class="col2">
            <div class="containerResumo">
            <div class="tituloResumo">
                <h2>RESUMO</h2>
            </div>
                <div class="preco-prods">
                    <p>Valor dos produtos: </p>
                    <b>R$3127,00</b>
                </div>
                <div class="frete">
                    <p>Frete:</p>
                    <b>R$3127,00</b>
                </div>
                <div class="preco-final-prazo">
                    <p>Total a prazo: </p>
                    <b>R$3127,00</b>
                </div>
            <div class="preco-final-pix">
                <span>Valor a vista no pix:</span>
                <p>R$ 0000,00</p>
                <p>Economize: R$ 000,00</p>
            </div>
            <div class="btn-resumo">
                <button class="continuar">CONTINUAR COMPRANDO</button>
                <button class="finalizar">FINALIZAR A COMPRA</button>
            </div>
        </div>
        </div>
        {{!-- RESUMO --}}
        
    </div>
</main>
